<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="delivery_date_box">
          Supposed to arrive on 
        </label>

        <input type="date" id="delivery_date_box" name="query_delivery_date">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>
      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
  <div class="waiting_on">
    <h2>Waiting on</h2>
    <ul>
      <% @undelivered_packages.each do |a_package| %>
        <li>
          <p><%= a_package.description %></p>
          <p>Supposed to arrive on <%= a_package.delivery_date %></p>
          <p><%= a_package.details %></p>
          <div>
            <form action="modify_package/<%= a_package.id %>" method="post">
              <button>Mark as received</button>
            </form>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<hr>
  <div class="received">
    <h2>Received</h2>
    <ul>
      <% @delivered_packages.each do |a_package| %>
        <li>
          <p><%= a_package.description %></p>
          <p>Updated about <%= Time.current - a_package.updated_at %> ago. <a href="delete_package/<%= a_package.id %>">Delete</a></p>
        </li>
      <% end %>
    </ul>
  </div>
